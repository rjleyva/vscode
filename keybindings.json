[
  // File & Explorer Commands
  {
    "key": "cmd+d d",
    "command": "moveFileToTrash",
    "when": "explorerResourceMoveableToTrash && filesExplorerFocus && foldersViewVisible && !inputFocus",
    "comment": "Move file to trash (only works if focus is on a moveable file in Explorer)"
  },
  {
    "key": "cmd+e cmd+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled",
    "comment": "Open Explorer view"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled",
    "comment": "Close Explorer view"
  },
  {
    "key": "cmd+n cmd+f",
    "command": "explorer.newFolder",
    "comment": "Create a new folder in Explorer"
  },
  {
    "key": "cmd+n f",
    "command": "welcome.showNewFileEntries",
    "comment": "Show new file entries in welcome screen"
  },

  // Git Commands
  {
    "key": "cmd+g cmd+g",
    "command": "git-graph.view",
    "comment": "Open Git Graph view"
  },
  {
    "key": "cmd+g c",
    "command": "git.commit",
    "comment": "Commit changes in Git"
  },
  {
    "key": "cmd+g a",
    "command": "git.commitAmend",
    "comment": "Amend the last commit in Git"
  },
  {
    "key": "cmd+g p",
    "command": "git.push",
    "comment": "Push changes to the remote Git repository"
  },

  // UI and View Toggle Commands
  {
    "key": "ctrl+o e",
    "command": "workbench.action.toggleSidebarVisibility",
    "comment": "Toggle visibility of the sidebar"
  },
  {
    "key": "cmd+-",
    "command": "workbench.action.toggleAuxiliaryBar",
    "comment": "Toggle visibility of the auxiliary bar"
  },

  // Commenting in Editor
  {
    "key": "cmd+l c",
    "command": "editor.action.addCommentLine",
    "when": "editorTextFocus && !editorReadonly",
    "comment": "Add a comment line in the editor (works when the editor is focused and not in readonly mode)"
  },
  {
    "key": "cmd+r cmd+n",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "cmd+r cmd+n",
    "command": "workbench.action.terminal.renameActiveTab",
    "when": "terminalHasBeenCreated && terminalTabsFocus && terminalTabsSingularSelection || terminalProcessSupported && terminalTabsFocus && terminalTabsSingularSelection"
  },
  {
    "key": "enter",
    "command": "-workbench.action.terminal.renameActiveTab",
    "when": "terminalHasBeenCreated && terminalTabsFocus && terminalTabsSingularSelection || terminalProcessSupported && terminalTabsFocus && terminalTabsSingularSelection"
  }
]
